<body>



    <nav class="nav">
        <div class="nav-wrapper container">
            <a class="nav-logo" href="/">StudyGroup</a>
            <a href="/"><i class="fa fa-arrow-left"></i> back to main page</a>
        </div>
    </nav>

    <main class="main container">
        <section>

            <div class="section-title-wm">
                <h2>Join</h2>
            </div>
            <div class="section-title">
                <h3>Join<span>.</span></h3>
            </div>

            <p class="login-form" >
                Enter code and press "start" to join an existing test or press "generate code" to start a new one
            </p>

            <!-- Makes POST request to /login route -->
            <form action="/start-test" method="POST" class="login-form">
                <div class="form-field">
                    <label for="code">Enter Code</label>
                    <input type="text" name="code" class="form-input">
                </div>
                <button type="submit" class="btn btn-primary">Start</button>
            </form>

            <form action="/generate-code" method="get" class="login-form">
                <button type="submit" name="generate" class="btn btn-primary">Generate Code</button>
            </form>

            <%if (code !=0) { %>
                <h1>
                    your code is <%= code %>
                </h1>
                <% } %>
        </section>

    </main>

